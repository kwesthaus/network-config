
config defaults
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'REJECT'
	option synflood_protect '1'


## ZONES

# config zone
# 	option name 'lan'
# 	list network 'lan'
# 	option input 'ACCEPT'
# 	option output 'ACCEPT'
# 	option forward 'ACCEPT'

config zone
	option name 'zn_wan'
	list network 'in_wan'
	list network 'in_wan6'
	option input 'REJECT'
	option output 'ACCEPT'
	option forward 'REJECT'
	option masq '1'
	option mtu_fix '1'

config zone
	option name 'zn_trusted'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'REJECT'
	list network 'in_trusted'

config zone
	option name 'zn_guest'
	option input 'REJECT'
	option output 'ACCEPT'
	option forward 'REJECT'
	list network 'in_guest'

config zone
	option name 'zn_iot'
	option input 'REJECT'
	option output 'ACCEPT'
	option forward 'REJECT'
	list network 'in_iot'

config zone
	option name 'zn_dmz'
	option input 'REJECT'
	option output 'ACCEPT'
	option forward 'REJECT'
	list network 'in_dmz'

config zone
	option name 'zn_infra'
	option input 'REJECT'
	option output 'ACCEPT'
	option forward 'REJECT'
	list network 'in_infra'


## FORWARDING

config forwarding
	option src 'zn_trusted'
	option dest 'zn_wan'

config forwarding
	option src 'zn_trusted'
	option dest 'zn_guest'

config forwarding
	option src 'zn_trusted'
	option dest 'zn_iot'

config forwarding
	option src 'zn_trusted'
	option dest 'zn_dmz'

config forwarding
	option src 'zn_trusted'
	option dest 'zn_infra'

config forwarding
	option src 'zn_guest'
	option dest 'zn_wan'

config forwarding
	option src 'zn_dmz'
	option dest 'zn_wan'

